# ============================================
# Discord Bot Configuration
# ============================================

# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_bot_token_here

# Discord Application ID (for slash commands, optional for Phase 1)
DISCORD_APPLICATION_ID=your_application_id_here

# ============================================
# PostgreSQL (Neon) Configuration
# ============================================

# Your Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech:5432/codeless_db?sslmode=require

# OR individual components:
# DB_HOST=ep-xxx.neon.tech
# DB_PORT=5432
# DB_NAME=codeless_db
# DB_USER=your_user
# DB_PASSWORD=your_password
# DB_SSL=true

# ============================================
# n8n Webhook Configuration
# ============================================

# n8n webhook URL for Laura agent
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/laura

# Webhook authentication (optional, if you set it in n8n)
# N8N_WEBHOOK_AUTH_HEADER=your_secret_token

# ============================================
# Bot Configuration
# ============================================

# Which agent this bot represents (laura, luka, nino)
AGENT_NAME=laura

# Maximum conversation context (number of messages to send to n8n)
MAX_CONTEXT_MESSAGES=10

# Response timeout (milliseconds)
AGENT_RESPONSE_TIMEOUT=30000

# ============================================
# Development Settings
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

